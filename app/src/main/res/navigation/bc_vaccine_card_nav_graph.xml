<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bc_vaccine_card_nav_graph"
    app:startDestination="@id/myCardsFragment">

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="ca.bc.gov.bchealth.ui.onboarding.OnBoardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding" />

    <fragment
        android:id="@+id/myCardsFragment"
        android:name="ca.bc.gov.bchealth.ui.mycards.MyCardsFragment"
        android:label="MyCardsFragment"
        tools:layout="@layout/fragment_my_cards">
        <action
            android:id="@+id/action_myCardsFragment_to_addCardOptionFragment"
            app:destination="@id/addCardOptionFragment" />
        <action
            android:id="@+id/action_myCardsFragment_to_expandQRFragment"
            app:destination="@id/expandQRFragment" />
    </fragment>
    <fragment
        android:id="@+id/addCardOptionFragment"
        android:name="ca.bc.gov.bchealth.ui.addcard.AddCardOptionFragment"
        android:label="AddCardOptionFragment"
        tools:layout="@layout/fragment_add_card_options">
        <action
            android:id="@+id/action_addCardOptionFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="ca.bc.gov.bchealth.ui.setting.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/barcodeScannerFragment"
        android:name="ca.bc.gov.bchealth.ui.scanner.BarcodeScannerFragment"
        android:label="BarcodeScannerFragment" />
    <dialog
        android:id="@+id/expandQRFragment"
        android:name="ca.bc.gov.bchealth.ui.mycards.ExpandQRFragment"
        android:label="ExpandQRFragment">
        <argument
            android:name="qrData"
            app:argType="string" />
    </dialog>
</navigation>